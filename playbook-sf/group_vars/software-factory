# This file sets all variables associated with group softwarefactory


# This will create to create unix user named tomcat in group tomcat with password set to tomcat and id set to 2000
# If you change the name, please also change the user in site.yml
service_name: tomcat
service_id: 2000 

# This will set tomcat's HTTP port to 8080 and HTTPS port to 8443
http_port: 8080
https_port: 8443

# This will configure a default manager-gui user:
admin_username: admin
admin_password: adminsecret

# This will configure the nexus user
nexus_deployment_username: deployment
nexus_deployment_password: deployment123

# Defines Tomcat version. Used in tomcat.yml
tomcat_version: 7.0.55
